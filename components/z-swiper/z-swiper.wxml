<swiper class='swiper'
indicator-dots='{{true}}'
indicator-active-color='#ff5777'
autoplay
interval='2000'
circular
easing-function='linear'>
  <block wx:for='{{list}}' wx:key="{{index}}">
    <swiper-item class='swiper-item'>
      <image src='{{item.image}}' mode='widthFix'></image>
    </swiper-item>
  </block>
</swiper>
